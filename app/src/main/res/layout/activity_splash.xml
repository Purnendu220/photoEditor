<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@color/colorPrimary"
    >

    <com.shouther.photoeditor.splashview.ParticleView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/float_transparent"
        app:pv_background_color="@color/colorPrimary"
        app:pv_host_text="Photo"
        app:pv_particle_text="Editor"
        app:pv_particle_text_size="24sp"
        app:pv_host_text_size="48sp"

        app:pv_text_color="@color/white"
        app:pv_text_anim_time="1000"
        app:pv_spread_anim_time="500"
        app:pv_host_text_anim_time="1000"

        />




</android.support.constraint.ConstraintLayout>
